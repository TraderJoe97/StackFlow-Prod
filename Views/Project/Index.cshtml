@model IEnumerable<StackFlow.Models.Project>


@{
    ViewData["Title"] = "Project List";
}

<h1 class="display-4 mb-4 text-center">Project List</h1>

<p class="mb-3 text-end">
    <a asp-action="Create" class="btn btn-primary">Create New Project</a>
</p>

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Start_Date)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Due_Date)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th scope="col" class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Start_Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Due_Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group" aria-label="Project Actions">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">Edit</a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary me-1">Details</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">No projects found. Create a new project to get started!</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>