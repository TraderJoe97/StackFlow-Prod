@{
    ViewData["Title"] = "Account Deleted";
    Layout = "_Layout"; // Ensure it uses the shared layout
}

<div class="account-page-container">
    <div class="card shadow-lg border-0 rounded-4 p-4 account-card text-center">
        <i class="bi bi-person-x-fill text-danger display-1 mb-3"></i>
        <h2 class="card-title mb-3 fw-bold text-danger">Your Account Has Been Deleted</h2>
        <p class="lead mb-4">
            We're sorry, but your account has been marked as deleted.
            You can no longer log in to the system.
        </p>
        <p class="mb-4">
            If you believe this is an error or would like to reactivate your account,
            please contact an administrator.
        </p>
        <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg rounded-pill shadow-sm animate-btn">
            <i class="bi bi-box-arrow-in-right me-2"></i> Back to Login
        </a>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/_Account.css" />
}
