@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

@section Styles {
    <style>
        body {
            margin: 0;
            background: linear-gradient(to right, #0052cc, #0073e6);
            min-height: 100vh;
        }
    </style>
    <link rel="stylesheet" href="~/css/_Account.css" />
}

<div class="login-page-container d-flex flex-wrap">
    <div class="left-panel text-white d-flex flex-column justify-content-center px-5 py-4 position-relative">
        <div class="background-circles">
            <div class="circle large"></div>
            <div class="circle medium"></div>
            <div class="circle small"></div>
        </div>
        <h1 class="display-4 fw-bold z-1">WELCOME</h1>
        <h5 class="mb-4 z-1">YOUR HEADLINE NAME</h5>
        <p class="lead z-1">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque eu erat lacus, vel congue mauris.
        </p>
    </div>

    <div class="right-panel d-flex align-items-center justify-content-center py-5">
        <div class="card shadow login-card w-100 p-4 rounded-4" style="max-width: 450px;">
            <h2 class="card-title text-center mb-4 fw-bold text-primary display-6">Sign in</h2>
            <hr class="mb-4" />

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-x-circle-fill me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (ViewData["LoginError"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@ViewData["LoginError"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-controller="Account" asp-action="Login" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="email" class="form-label fw-semibold">Email</label>
                    <input type="email" id="email" name="email" class="form-control form-control-lg rounded-pill" placeholder="your.email@domain.com" required />
                    <div class="invalid-feedback">Please enter a valid email address.</div>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label fw-semibold">Password</label>
                    <input type="password" id="password" name="password" class="form-control form-control-lg rounded-pill" placeholder="Enter your password" required />
                    <div class="invalid-feedback">Please enter your password.</div>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="rememberMe" id="rememberMe">
                        <label class="form-check-label" for="rememberMe">Remember me</label>
                    </div>
                    <a href="#" class="small text-decoration-none">Forgot Password?</a>
                </div>

                <div class="d-grid gap-3">
                    <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm">Sign in</button>
                    <div class="text-center fw-bold text-muted">or</div>
                    <button type="button" class="btn btn-outline-secondary btn-lg rounded-pill">Sign in with other</button>
                </div>

                <div class="text-center mt-3 small">
                    Don’t have an account? <a asp-controller="Account" asp-action="Register" class="text-decoration-none fw-semibold">Sign up</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Bootstrap form validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}
@section Styles {
    <link rel="stylesheet" href="~/css/_Account.css" />
}
