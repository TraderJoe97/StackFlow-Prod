@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}

<div class="auth-wrapper">
    <!-- Left Side: Welcome Section -->
    <div class="auth-welcome-section">
        <div class="welcome-overlay">
            <h1 class="welcome-title">Welcome to StackFlow</h1>
            <p class="welcome-subtitle">Join us and be part of the future!</p>
            <img src="~/images/logo-white.png" class="welcome-logo" alt="Logo" />
        </div>

        <!-- Circles -->
        <div class="circle circle1"></div>
        <div class="circle circle2"></div>
        <div class="circle circle3"></div>
    </div>

    <!-- Right Side: Register Form -->
    <div class="auth-form-section">
        <div class="auth-card">
            <h2 class="auth-title">
                <i class="bi bi-person-plus-fill me-2"></i> Create Account
            </h2>

            @if (ViewData["RegistrationError"] != null)
            {
                <div class="auth-error">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@ViewData["RegistrationError"]
                    <button type="button" class="close-btn" data-bs-dismiss="alert" aria-label="Close">&times;</button>
                </div>
            }

            <form asp-controller="Account" asp-action="Register" method="post" class="auth-form" novalidate>
                <div class="input-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" placeholder="Choose a username" required />
                    <div class="invalid-feedback">Please enter a username.</div>
                </div>

                <div class="input-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="your.email@omnitak.com" required />
                    <div class="form-note">Must be an omnitak.com email address.</div>
                    <div class="invalid-feedback">Please enter a valid omnitak.com email address.</div>
                </div>

                <div class="input-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" placeholder="Choose a strong password" required />
                    <div class="invalid-feedback">Please enter a password.</div>
                </div>

                <div class="button-group">
                    <button type="submit" class="primary-btn">
                        <i class="bi bi-person-plus-fill me-2"></i> Register
                    </button>
                    <a asp-controller="Account" asp-action="Login" class="secondary-btn">
                        <i class="bi bi-box-arrow-in-right me-2"></i> Back to Login
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.auth-form');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/Account.css" />
}
