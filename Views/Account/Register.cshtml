@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Account.css" />
}

<div class="account-wrapper">
    <div class="container">
        <div class="welcome-section">
            <img src="~/images/logo.JPG" alt="Logo" class="logo" />
            <h1>WELCOME!</h1>
            <p class="description">
                Join us and simplify your workflow today.
            </p>

            <div class="circle circle1"></div>
            <div class="circle circle2"></div>
            <div class="circle circle3"></div>
        </div>

        <div class="login-section">
            <h2>Register</h2>

            @if (ViewData["RegisterError"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@ViewData["RegisterError"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-controller="Account" asp-action="Register" method="post" class="needs-validation" novalidate>
                <label>
                    <span class="icon">👤</span>
                    <input type="text" name="username" class="form-control" placeholder="Username" required />
                    <div class="invalid-feedback">Please enter a username.</div>
                </label>

                <label>
                    <span class="icon">📧</span>
                    <input type="email" name="email" class="form-control" placeholder="Email" required />
                    <div class="invalid-feedback">Please enter a valid email.</div>
                </label>

                <label>
                    <span class="icon">🔒</span>
                    <input type="password" name="password" class="form-control" placeholder="Password" required />
                    <div class="invalid-feedback">Please enter your password.</div>
                </label>

                <label>
                    <span class="icon">🔒</span>
                    <input type="password" name="confirmPassword" class="form-control" placeholder="Confirm Password" required />
                    <div class="invalid-feedback">Passwords must match.</div>
                </label>

                <button type="submit" class="btn-primary">Register</button>

                <div class="divider"><span>or</span></div>

                <a asp-controller="Account" asp-action="Login" class="btn-secondary text-center d-block">
                    Already have an account? Log in
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}
