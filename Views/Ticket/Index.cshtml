@model IEnumerable<StackFlow.Models.Ticket>


@{
    ViewBag.Title = "Ticket List";
}

<h2>Ticket List</h2>

@* Link to the Create action for adding a new ticket *@
<p class="text-end mb-3">
    <a asp-action="Create" class="btn btn-primary">Create New Ticket</a>
</p>


@* Table to display the list of tickets *@
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            @* Column headers with display names pulled from model metadata *@
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Due_Date)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th>@Html.DisplayNameFor(model => model.Priority)</th>
            <th>@Html.DisplayNameFor(model => model.Project.Name)</th>
            <th>@Html.DisplayNameFor(model => model.AssignedTo.Name)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @* Loop through each ticket item in the model and display its properties *@
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Due_Date.ToShortDateString()</td>
                <td>@item.Status</td>
                <td>@item.Priority</td>
                <td>@item.Project?.Name</td> @* Null check in case project is not linked *@
                <td>@item.AssignedTo?.Name</td> @* Null check in case ticket is unassigned *@
                <td>
                    @* Links to Edit, Details, and Delete actions for each ticket with styling *@
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary me-1">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>

@section Styles {
    <link rel="stylesheet" href="~/css/Ticket.css" />
}