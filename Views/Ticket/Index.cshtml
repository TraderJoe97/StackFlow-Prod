@model IEnumerable<StackFlow.Models.Ticket>

@{
    ViewBag.Title = "Ticket List";
}

<h2>Ticket List</h2>

<p>
    @Html.ActionLink("Create New Ticket", "Create")
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Due_Date)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th>@Html.DisplayNameFor(model => model.Priority)</th>
            <th>@Html.DisplayNameFor(model => model.Project.Name)</th>
            <th>@Html.DisplayNameFor(model => model.AssignedTo.Name)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Due_Date.ToShortDateString()</td>
                <td>@item.Status</td>
                <td>@item.Priority</td>
                <td>@item.Project?.Name</td>
                <td>@item.AssignedTo?.Name</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
