@model StackFlow.Models.Ticket

@{
    ViewBag.Title = "Ticket Details";
}

<h2>Ticket Details</h2>

<div class="card p-4 shadow-sm">
    <dl class="row">
        <dt class="col-sm-3">Title</dt>
        <dd class="col-sm-9">@Model.Title</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Due Date</dt>
        <dd class="col-sm-9">@Model.Due_Date.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-3">Priority</dt>
        <dd class="col-sm-9">@Model.Priority</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>

        <dt class="col-sm-3">Project</dt>
        <dd class="col-sm-9">@Model.Project?.Name</dd>

        <dt class="col-sm-3">Assigned To</dt>
        <dd class="col-sm-9">@Model.AssignedTo?.Name</dd>

        <dt class="col-sm-3">Created By</dt>
        <dd class="col-sm-9">@Model.CreatedBy?.Name</dd>

        <dt class="col-sm-3">Created At</dt>
        <dd class="col-sm-9">@Model.Created_At.ToString("yyyy-MM-dd HH:mm")</dd>

        @* Only show Completed_At if it has a value *@
        @* @if (Model.Completed_At != null) *@
        @* { *@
        @*     <dt class="col-sm-3">Completed At</dt> *@
        @*     <dd class="col-sm-9">@Model.Completed_At.ToString("yyyy-MM-dd HH:mm")</dd> *@
        @* } *@
    </dl>

    <div class="text-end mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-info me-2">Edit</a>
        <a asp-action="Index" class="btn btn-sm btn-secondary">Back to List</a>
    </div>
</div>
