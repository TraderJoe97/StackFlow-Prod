@model StackFlow.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<div class="card shadow-lg border-0 rounded-4 p-4 mt-4 mb-4">
    <div class="d-flex justify-content-between align-items-start mb-3">
        <h2 class="card-title mb-0 fw-bold text-danger display-6">
            <i class="bi bi-person-dash-fill me-2"></i> Confirm User Deletion
        </h2>
        @* Back to User Reports button *@
        <a asp-action="Index" asp-controller="UserReports" class="btn btn-outline-secondary rounded-pill shadow-sm animate-btn">
            <i class="bi bi-arrow-left-circle me-1"></i> Back to User Reports
        </a>
    </div>
    <hr class="mb-4" />

    <div class="alert alert-danger rounded-4 shadow-sm" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> Are you sure you want to delete the user <strong>@Model.Name</strong>? This action cannot be undone.
    </div>

    <dl class="row">
        <dt class="col-sm-3">
            Username:
        </dt>
        <dd class="col-sm-9">
            @Model.Name
        </dd>
        <dt class="col-sm-3">
            Email:
        </dt>
        <dd class="col-sm-9">
            @Model.Email
        </dd>
        <dt class="col-sm-3">
            Role:
        </dt>
        <dd class="col-sm-9">
            @Model.Role?.Name
        </dd>
        <dt class="col-sm-3">
            Active Status:
        </dt>
        <dd class="col-sm-9">
            @Model.IsActive
        </dd>
    </dl>

    <form asp-action="DeleteUser" asp-controller="Admin" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <button type="submit" class="btn btn-danger rounded-pill shadow-sm animate-btn"><i class="bi bi-trash-fill me-2"></i>Delete</button>
            <a asp-action="Index" asp-controller="UserReports" class="btn btn-secondary rounded-pill shadow-sm animate-btn">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}