@{
    ViewData["Title"] = "Home Page";
}

    <title>Welcome to StackFlow</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        /* Base styles */
        body {
            font-family: 'Inter', sans-serif;
            background-color: #ffffff; /* Explicitly white */
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            color: #374151; /* text-gray-800 */
            margin: 0; /* Ensure no default body margin */
        }

        /* Flexbox utilities for centering */
        .flex {
            display: flex;
        }

        .flex-grow {
            flex-grow: 1;
        }

        .items-center {
            align-items: center;
        }

        .justify-center {
            justify-content: center;
        }

        /* Spacing utilities */
        .p-4 {
            padding: 1rem; /* 16px */
        }

        .p-8 {
            padding: 2rem; /* 32px */
        }

        .p-12 {
            padding: 3rem; /* 48px */
        }

        .mb-4 {
            margin-bottom: 1rem; /* 16px */
        }

        .mb-6 {
            margin-bottom: 1.5rem; /* 24px */
        }

        .mb-8 {
            margin-bottom: 2rem; /* 32px */
        }

        .mt-6 {
            margin-top: 1.5rem; /* 24px */
        }

        .mx-auto {
            margin-left: auto;
            margin-right: auto;
        }

        /* Sizing utilities */
        .w-full {
            width: 100%;
        }

        /* Typography */
        .text-sm {
            font-size: 0.875rem; /* 14px */
            line-height: 1.25rem; /* 20px */
        }

        .text-lg {
            font-size: 1.125rem; /* 18px */
            line-height: 1.75rem; /* 28px */
        }

        .text-4xl {
            font-size: 2.25rem; /* 36px */
            line-height: 2.5rem; /* 40px */
            /* Removed white-space: nowrap; to allow wrapping if space is tight, but increased card width */
            /* Removed overflow: hidden; text-overflow: ellipsis; as they are not needed if space is sufficient */
        }

        .font-extrabold {
            font-weight: 800;
        }

        .font-semibold {
            font-weight: 600;
        }

        .tracking-tight {
            letter-spacing: -0.025em;
        }

        .leading-relaxed {
            line-height: 1.625;
        }

        .text-center {
            text-align: center;
        }

        /* Colors */
        .text-white {
            color: #ffffff;
        }

        .text-gray-900 {
            color: #111827;
        }

        .text-gray-700 {
            color: #374151;
        }

        .text-gray-600 {
            color: #4b5563;
        }

        .text-blue-500 {
            color: #3b82f6;
        }

        .text-blue-600 {
            color: #2563eb;
        }

    .text-red-600 {
        color: blueviolet;
    }

    .text-blue-600 {
        color: brown;
    }

    .text-blue-600 {
        color: darkgreen;
    }

    .text-blue-600 {
        color: greenyellow;
    }

    .text-blue-600 {
        color: lightpink;
    }
        /* Used for StackFlow name */

        .bg-white {
            background-color: #ffffff;
        }

        .bg-opacity-100 {
            background-color: #ffffff;
        }
        /* Ensuring full opacity for the card */

        /* Background Gradients (not applied to section, definition kept for reference) */
        .login-bg-gradient {
            background: linear-gradient(135deg, #3b82f6 0%, #1e40af 100%);
        }

        /* Borders and Rings */
        .rounded-2xl {
            border-radius: 1rem;
        }

        .border {
            border-width: 1px;
            border-style: solid;
        }

        .border-blue-100 {
            border-color: #dbeafe;
        }

        /* Shadows */
        .shadow-2xl {
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        }

        /* Transitions and Transforms */
        .transition-all {
            transition-property: all;
            transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
            transition-duration: 150ms;
        }

        .duration-500 {
            transition-duration: 500ms;
        }

        .ease-in-out {
            transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
        }

        .transform {
            transform: var(--transform);
        }

        .hover\:scale-\[1\.01\]:hover {
            transform: scale(1.01);
        }

        /* Custom properties */
        .relative {
            position: relative;
        }

        /* Card specific styles for square and centering */
        .square-card {
            /* Increased max-width to give more space for text */
            width: min(90vw, 600px);
            /* Adjusted height to accommodate content comfortably, allowing it to grow */
            height: auto; /* Allow height to adapt to content */
            min-height: min(70vh, 350px); /* Ensure a minimum height for smaller content */
            box-sizing: border-box; /* Include padding/border in width/height */
            display: flex; /* Make it a flex container for its own content */
            flex-direction: column; /* Stack content vertically */
            justify-content: center; /* Center content vertically */
            align-items: center; /* Center content horizontally */
            padding: 2rem; /* Ensure adequate padding */
            text-align: center;
        }

        /* Media query for smaller screens */

    </style>

<body class="flex flex-col min-h-screen">

